{
	"name": "drago-ex/authorization",
	"type": "library",
	"description": "Simple dynamic access control list management.",
	"license": ["MIT"],
	"authors": [
		{
			"name": "Zdeněk Papučík",
			"homepage": "https://github.com/accgit"
		}
	],
	"require": {
		"php": ">=8.0",
		"nette/security": "^3.0",
		"nette/application": "^3.0",
		"nette/caching": "^3.0",
		"nette/di": "^3.0",
		"latte/latte": "^2.8",
		"drago-ex/database": "^1.0",
		"drago-ex/application": "^1.0",
		"drago-ex/utils": "^1.0"
	},
	"require-dev": {
		"nette/tester": "^2.3",
		"nette/bootstrap": "^3.0",
		"tracy/tracy": "^2.7",
		"phpstan/phpstan-nette": "^0.12"
	},
	"autoload": {
		"classmap": ["src/"]
	},
	"scripts": {
		"phpstan": "phpstan analyse --level 4 --configuration tests/phpstan.neon src",
		"tester": "tester tests -s",
		"tester-win": "tester -c tests/php.ini tests -s"
	}
}
