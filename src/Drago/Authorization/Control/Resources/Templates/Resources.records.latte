{varType Drago\Authorization\Entity\ResourcesEntity $resource}
<h5 class="border-bottom pb-2">Resources</h5>
<div class="table-responsive-sm">
	<table class="table table-sm table-striped table-hover table-borderless">

		<thead>
		<tr>
			<th scope="col" class="text-uppercase small">Name</th>
			<th scope="col" class="text-uppercase small">Action</th>
		</tr>
		</thead>

		<tbody>
		<tr n:foreach="$resources as $resource">
			<td style="width: 75%">{$resource->name}</td>
			<td style="width: 25%">
				<a n:href="edit!, $resource->id" class="ajax">Edit</a>
				{if $deleteId === $resource->id}
					<a n:href="deleteConfirm!, 0, $resource->id" class="ajax">No</a>
					<a n:href="deleteConfirm!, 1, $resource->id" class="ajax">Yes</a>
				{else}
					<a n:href="delete!, $resource->id" class="ajax">Delete</a>
				{/if}
			</td>
		</tr>
		</tbody>
	</table>
</div>
