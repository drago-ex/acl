{varType Drago\Authorization\Entity\RolesEntity $role}

<div class="shadow-lg p-4 mb-4">
	<div class="table-responsive-sm">

		<h4 class="mb-3 display-4 text-primary font-weight-normal" style="font-size: 1.438em;">Roles</h4>
		<table class="table table-sm table-striped">

			<thead>
			<tr>
				<th scope="col">Name</th>
				<th scope="col">Parent</th>
				<th scope="col">Action</th>
			</tr>
			</thead>

			<tbody>
			<tr n:foreach="$roles as $role">
				<td>{$role->name}</td>
				<td>{$role->parent}</td>
				<td>
					<a n:href="edit!, $role->id" class="ajax">Edit</a>
					{if $deleteId === $role->id}
						<a n:href="deleteConfirm!, 0, $role->id" class="ajax">No</a>
						<a n:href="deleteConfirm!, 1, $role->id" class="ajax">Yes</a>
					{else}
						<a n:href="delete!, $role->id" class="ajax">Delete</a>
					{/if}
				</td>
			</tr>
			</tbody>

		</table>
	</div>
</div>
